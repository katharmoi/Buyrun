<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/list_item_product_img_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/a11y_product_image"
            android:src="@drawable/no_img_placeholder"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_product_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textStyle="bold"
                tools:text="Starters" />

            <TextView
                android:id="@+id/list_item_product_desc_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="8dp"
                tools:text="Lorem ipsum dolor sit amet Lorem ipsum dolor sit ametLorem ipsum dolor sit amet
            Lorem ipsum dolor sit amet Lorem ipsum dolor sit ametLorem ipsum dolor sit amet" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/list_item_product_add_to_cart_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_add_shopping_cart"
            android:contentDescription="@string/a11y_add_to_cart"
            android:padding="4dp" />


    </LinearLayout>
</android.support.v7.widget.CardView>